pipeline {
    agent any

    stages {
        stage('Checkout code') {
            steps {
                git branch: 'main', url: 'https://github.com/Houssem123987/houssem'
            }
        }

        stage('Build') {
            steps {
                bat 'echo Building the app'
            }
        }

        stage('Test') {
            steps {
                bat 'echo Testing the app'
            }
        }

        stage('Deploy') {
            steps {
                bat 'echo Deploying the app'
            }
        }
    } 

    post { 
        always {
            echo 'Pipeline terminé'
        }
        success {
            echo 'Succès du pipeline'
        }
        failure {
            echo 'Échec du pipeline'
        }
    }
}


